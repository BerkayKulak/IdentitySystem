@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}


<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%; height:100%;" src="@Model.Picture" />



    </div>

    <div class="col-sm-9">

        <table class="table table-bordered table-striped">

            <tr>
                <th>Kullanıcı İsmi</th>
                <td>@Model.UserName</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>


            <tr>
                <th>Telefon NO</th>
                <td>@Model.PhoneNumber</td>
            </tr>

            <tr>
                <th>City</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))

                    {
                        @Model.City
                    }
                    else
                    {
                        <span>Belirtilmemiş</span>
                    }
                </td>
            </tr>

            <tr>
                <th>Doğum Tarihi</th>
                <td>@Model.BirthDay?.ToShortDateString()</td>
            </tr>

            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>



        </table>


    </div>


</div>

